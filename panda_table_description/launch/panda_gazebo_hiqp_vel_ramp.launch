<?xml version="1.0"?>
<launch>

    <!-- arguments -->
    <arg name="paused" default="false"/>
    <arg name="use_sim_time" default="true"/>
    <arg name="gui" default="true"/>
    <arg name="headless" default="false"/>
    <arg name="debug" default="false"/>
    <arg name="load_gripper" default="true"/>
    <arg name="robot_namespace" default="panda"/>
    <arg name="controllers" default="joint_state_controller hiqp_joint_velocity_controller gripper_direct_controller"/>
    <arg name="rviz" default="true"/>

    <!-- Load joint controller configurations from YAML file to parameter server -->
    <rosparam command="load" file="$(find panda_table_launch)/config/controllers.yaml" />
    <!--rosparam command="load" file="$(find panda_table_launch)/config/franka_limits.yaml" /-->

    <!--launch GAZEBO with own world configuration -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="debug" value="$(arg debug)"/>
        <arg name="gui" value="$(arg gui)"/>
        <arg name="paused" value="$(arg paused)"/>
        <arg name="use_sim_time" value="$(arg use_sim_time)"/>
        <arg name="headless" value="$(arg headless)"/>
    </include>

    <!-- load robot description from xacro file -->
    <param name="robot_description" command="$(find xacro)/xacro --inorder '$(find panda_table_description)/urdf/panda_table_ramp_vel.urdf.xacro' load_gripper:=$(arg load_gripper)"/>
    <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-param robot_description -urdf -model panda -J panda_joint1 0.0 -J panda_joint2 -1.17 -J panda_joint3 0.0 -J panda_joint4 -2.85 -J panda_joint5 0.0 -J panda_joint6 1.82 -J panda_joint7 0.84"/>

    <param name="box_description" command="$(find xacro)/xacro --inorder $(find panda_table_description)/urdf/box.urdf.xacro"/>
    <node name="spawn_object" pkg="gazebo_ros" type="spawn_model" args="-param box_description -urdf -model box -x -0.3 -y -0.2 -z 0.72"/>

    <!-- load the controllers -->
    <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen" args="$(arg controllers)"/>
    <!-- <node name="controller_spawner_stopped" pkg="controller_manager" type="spawner" respawn="false" output="screen" args="- -stopped velocity_joint_trajectory_controller"/> -->

    <!-- convert joint states to TF transforms for rviz, etc -->
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" output="screen"/>

    <!-- load rviz -->
    <node name="rviz" pkg="rviz" type="rviz" if="$(arg rviz)" args="-d $(find panda_table_description)/launch/sim.rviz" />

</launch>
